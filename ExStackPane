package application;
import javafx.application.Application;

import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;

import javafx.scene.layout.StackPane;
import javafx.scene.paint.Color;
import javafx.scene.shape.Rectangle;
import javafx.stage.Stage;

public class ExStackPane extends Application {
	public void start(Stage primaryStage) throws Exception {
		try {
			
			Label titulo = new Label();
			
			// criar border pane e adicionar botoes
            StackPane stack = new StackPane();
            // Rectangle retangulo = new Rectangle(100, 100, Color.GREEN); 
            Label texto = new Label("Olá, esta tela utiliza StackPane!\n" + "O StackPane é uma interface gráfica e atua como um Gerenciador de Layouts.\n" + "Um layout pode ser entendido como a forma que elementos são organizados em um espaço");
            stack.getChildren().addAll(texto);

            // 4. Criar a cena com o StackPane
            Scene scene = new Scene(stack, 400, 400);
			
			//criar stage
			primaryStage.setScene(scene);
			primaryStage.setTitle("Exemplo StackPane");
			primaryStage.show();



		
		}catch(Exception e) {
			e.printStackTrace();
		}
	}
	
	public static void main(String[] args) {
		launch(args);
	}

}
